<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SmokeTest" thread-count="5" parallel="true">
	<listeners>
		<listener class-name="com.OrangeHRM.Utilities.ListnersManager"></listener>
	</listeners>
	
	<parameter name="browser" value="chrome"/>
	
  <test thread-count="5" parallel="true" name="Chrometest">
	<groups>
		<run>
			
			<include name="smoke"/>
			<exclude name="functional"/>
		</run>
	</groups>
	
	
    <classes>
        <class name="com.OrangeHRM.testcases.Logintest"/>
 		<class name="com.OrangeHRM.testcases.SearchProduct"/>

	     
      
    </classes>
  </test> <!-- Test -->
  
   <parameter name="browser"  value="edge"/>
   <test thread-count="5" parallel="true"  name="EdgeTest">
	<groups>
		<run>
			<include name="functional"/>
			
		</run>
	</groups>
	
    <classes>
        <class name="com.OrangeHRM.testcases.Logintest"/>
 	<class name="com.OrangeHRM.testcases.SearchProduct"/>

	     
      
    </classes>
  </test> <!-- Test -->
</suite> <!-- SmokeTest -->
